{
	"parser": "babel-eslint",

	"extends": [
		"airbnb",
	],

	"plugins": [
		"react",
	],

	"env": {
		"browser": true,
		"node": true,
	},

	"globals": {
		"gql": true,
		"ga": true,
		"describe": true,
		"it": true,
		"test": true,
		"expect": true,
		"jest": true,
		"mount": true,
		"shallow": true,
		"beforeEach": true,
		"afterEach": true,
		"jasmine": true,
		"beforeAll": true,
		"afterAll": true,
	},

	"rules": {
		"no-console": 0,
		"no-tabs": 0,
		"no-multiple-empty-lines": 0,
		"no-array-index-key": 0,
		"no-unused-vars": 1,

		"var": "never",

		"indent": ["error", "tab", {
			"SwitchCase": 1,
		}],
		
		"comma-dangle": [1, "only-multiline"],
		"arrow-body-style": 0,
		"arrow-parens": 0,
		"quotes": 0,
		"object-curly-spacing": 0,

		"jsx-a11y/href-no-hash": 0,

		"react/jsx-indent": [1, "tab"],
		"react/jsx-indent-props": [1, "tab"],
		"react/jsx-filename-extension": 0,
		"react/require-default-props": 0,
		"react/prefer-stateless-function": 0,
		"react/forbid-prop-types": 0,
	}
}